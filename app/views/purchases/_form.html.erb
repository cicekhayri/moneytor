<div class="row">
  <div class="col-md-6">
    <%= form_for @purchase do |f| %>
      <% if @purchase.errors.any? %>
        <ul>
          <% @purchase.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="form-group">
        <%= f.label t(:category) %>
        <%=  f.select :category_id, options_from_collection_for_select(current_user.categories, "id", "title") %>
      </div>
      <div class="form-group">
        <%= f.label t(:receipt) %>
        <% if @purchase.receipt %>
          <div class="img_edit"><%= image_tag(@purchase.receipt.url) %></div>
        <% end %>
        <br>
        <%= f.file_field :receipt %>
      </div>
      <div class="form-group">
        <%= f.label t(:product) %>
        <%= f.text_field :product, class: "form-control", placeholder: "Shoes" %>
      </div>
      <div class="form-group">
        <%= f.label t(:purchase_date) %>
        <%= f.date_field :purchase_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label t(:amount) %>
        <%= f.text_field :amount, class: "form-control", placeholder: "10.00" %>
      </div>
      <div class="form-group">
        <%= f.label t(:store_name) %>
        <%= f.text_field :store_name, class: "form-control", placeholder: "Store name" %>
      </div>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
  <br><br><br>
  <br><br><br>
  </div>
</div>

