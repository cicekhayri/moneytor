<%= render 'nav' %>

<h3>Purchases</h3>
<table class="table table-striped">
  <tbody>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.product %></td>
      <td><%= purchase.purchase_date %></td>
      <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
      <td><%= link_to 'Delete', purchase, method: :destroy, data: { confirm: "Are you sure you wan't to delete #{purchase.product}" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

