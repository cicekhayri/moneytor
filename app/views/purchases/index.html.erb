<%= render 'nav' %>

<h3>Purchases</h3>

  <%= form_tag purchases_path, method: :get,:class => "form-inline" do %>

    <div class="form-group">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "product name or company name" %>
    </div>
    
    <%= submit_tag "Search", class:"btn btn-success" %>

<% end %>
<br>
<table class="table table-striped">
  <tbody>
  <% @purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.product %></td>
      <td><%= purchase.purchase_date %></td>
      <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
      <td><%= link_to 'Delete', purchase, method: :destroy, data: { confirm: "Are you sure you wan't to delete #{purchase.product}" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

