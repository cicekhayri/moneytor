<h3><%= @category.title %></h3>

<table class="table table-striped">
  <tbody>
  <% @category.purchases.each do |purchase| %>
    <tr>
      <td><%= purchase.product %></td>
      <td><%= number_to_currency(purchase.amount) %></td>
      <td><%= purchase.purchase_date %></td>
      <td><%= purchase.store_name %></td>
      <td><%= link_to 'Edit', edit_purchase_path(purchase) %> | <%= link_to 'Delete', purchase, method: :destroy, data: { confirm: "Are you sure you wan't to delete #{purchase.product}" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

