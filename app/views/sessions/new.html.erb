<h1><%= t(:login_user) %></h1>
<div class="row">
  <div class="col-md-6">
    <%= form_tag sessions_path do %>
      <div class="form-group">  
      <%= label_tag t(:email) %>
      <%= text_field_tag :email, nil, required: true, class: "form-control", placeholder: "Enter email"  %>
      </div>
      <div class="form-group">  
      <%= label_tag t(:password) %>
      <%= password_field_tag :password, nil, required: true, class: "form-control", placeholder: "Enter password"%>
      </div>
      <%= submit_tag t(:login_user), class: "btn btn-success" %>
    <% end %>
  </div>
</div>

